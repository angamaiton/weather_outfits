<!DOCTYPE html>
<html lang="en">

<div class="container-fluid">

  <div class="col-md-1"></div>

    <div class="col-md-10">

        <form class="form-horizontal", id="new_outfit", enctype="multipart/form-data", action="<%=upload_outfit_path%>", method="post">

          <input name="utf8" type="hidden" value="âœ“">

          <input type="hidden" name="authenticity_token" value="DnOJMiterwYwg8rnZsKfks1mopPJ3u+WajGYZ/7JDvr2eSSxHDnSxDjmDek83EAZx/2BFnUtLLUscSIWyvll1w==">

          <% if @outfit.errors.any? %>
            <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">X</button>
            <strong>There was a problem uploading your outfit.</strong> Please try again.
            <ul>
              <% @outfit.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
            </div>
          <% end %>

          <fieldset>
            <legend>Upload An Outfit</legend>
            <div class="form-group">
              <label for="name" class="col-lg-2 control-label">Name</label>
              <div class="col-lg-10">
                <input type="text" class="form-control" id="name" placeholder="Name" name="outfit[name]" required>
              </div>
            </div>

            <div class="form-group">
              <label for="temperature" class="col-lg-2 control-label">What kind of weather is this outfit for?</label>
              <div class="col-lg-10">
                <select class="form-control" id="temperature" name="outfit[temp]">
                  <% Outfit::TEMPERATURES.each do |temperature| %>
                    <option><%= temperature.split.map(&:capitalize).join(' ') %></option>
                  <% end %>
                </select>
                <br>
              </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 control-label">Would you wear this in the rain?</label>
                <div class="col-lg-10">
                  <div class="radio">
                    <label>
                      <input type="radio" name="outfit[rain]" id="outfit_rain_true" value="true" checked="">
                          Yes
                    </label>
                  </div>
                  <div class="radio">
                    <label>
                      <input type="radio" name="outfit[rain]" id="outfit_rain_false" value="false">
                          No
                    </label>
                  </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 control-label">Who would wear this outfit?</label>
                <div class="col-lg-10">
                  <div class="radio">
                    <label>
                      <input type="radio" name="outfit[gender]" id="male" value="male" checked="">
                          Man
                    </label>
                  </div>
                  <div class="radio">
                    <label>
                      <input type="radio" name="outfit[gender]" id="female" value="female">
                          Woman
                    </label>
                  </div>
                </div>
            </div>


            <div class="form-group">
               <label class="col-lg-2 control-label"></label>
              <div class="col-lg-10">
                <input type="file" name="outfit[image_upload]" id="outfit_image_upload">
              </div>
            </div>

            <input value="2" type="hidden" name="outfit[user_id]" id="outfit_user_id">

            <div class="form-group">
              <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Upload</button>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    <div class="col-md-1"></div>
  </div>
</html>

